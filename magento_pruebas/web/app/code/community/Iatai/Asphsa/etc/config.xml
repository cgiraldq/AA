<config>
    <modules>
        <Iatai_Asphsa>
            <version>1.0.3</version>
        </Iatai_Asphsa>
    </modules>
    <global>
        <models>
            <asphsa>
                <class>Iatai_Asphsa_Model</class>
            </asphsa>
        </models>
        <blocks>
            <asphsa>
                <class>Iatai_Asphsa_Block</class>
            </asphsa>
        </blocks>
        <helpers>
            <asphsa>
                <class>Iatai_Asphsa_Helper</class>
            </asphsa>
        </helpers>
		<resources>
            <asphsa_setup>
                <setup>
                    <module>Iatai_Asphsa</module>
                    <class>Iatai_Asphsa_Model_Resource_Setup</class>
                </setup>
            </asphsa_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <asphsa>
                <use>standard</use>
                <args>
                    <module>Iatai_Asphsa</module>
                    <frontName>asphsa</frontName>
                </args>
            </asphsa>
        </routers>
        <layout>
            <updates>
                <asphsa>
                    <file>asphsa.xml</file>
                </asphsa>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
					<asphsa>
						<title>Asph and Secure Acceptance Integration</title>
					</asphsa>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <payment>
            <asphsa>
                <active>0</active>
               	<model>asphsa/asphsa</model>
               	<title>Asph and Secure Acceptance Integration</title>
                <mode>0</mode>
				<order_status>pending</order_status>
				<sort_order>1</sort_order>
            </asphsa>
        </payment>
    </default>
</config>